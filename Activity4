full_name = input("Enter your full name (First, Middle, Last): ")

name_parts = [name.strip() for name in full_name.split(',')]

if len(name_parts) >= 3:
    first_name = name_parts[0]
    middle_name = name_parts[1]
    last_name = name_parts[2]

    first_name_capitalized = first_name.capitalize()
    last_name_capitalized = last_name.capitalize()

    if middle_name:
        middle_initial = middle_name[0].upper() + '.'
    else:
        middle_initial = ''

    formatted_name = f"{last_name_capitalized}, {first_name_capitalized} {middle_initial}".strip()

    print("Formatted Name:", formatted_name)
else:
    print("Invalid input. Please enter your name in the format: First, Middle, Last.")